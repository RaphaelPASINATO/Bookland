{% extends 'base.html.twig' %}

{% block title %}Auteurs ayant écrit 3 livres {% endblock %}

{% block body %}
    <h1>Liste des auteurs ayant écrit dans au moins 3 livres différents</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom et prenom</th>
                <th>Sexe</th>
                <th>Date de naissance</th>
                <th>Nationalite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.nomPrenom }}</td>
                <td>{{ auteur.sexe }}</td>
                <td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ auteur.nationalite }}</td>
                <td>
                    <a href="{{ path('auteur_show', {'id': auteur.id}) }}">Voir</a>
                    <a href="{{ path('auteur_edit', {'id': auteur.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun auteur trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('auteur_index') }}">Retour à la liste</a>
{% endblock %}
